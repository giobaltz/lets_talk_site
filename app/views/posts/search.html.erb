<h2>Results</h2>
</br>
<h4>Search by Text:</h4>
  <%= form_tag(search_post_path_url, method: :get) do%>
    <%= text_field_tag(:search, params[:search])%>
    <%= submit_tag("Search") %>
  <%end%>

<table>
  <tr>
    <th>User</th>
    <th>Text</th>
    <th></th>
  </tr>
  <% @search.each do |search| %>
    <tr>
      <td><%= search.user %></td>
      <td><%= search.text %></td>
    </tr>
  <% end %>
</table>