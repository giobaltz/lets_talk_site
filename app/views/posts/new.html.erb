<%= form_with scope: :post, url: posts_path, local: true do |form| %>  <p>
    <%= form.label :user %><br>
    <%= form.text_field :user, value: current_user.email, readonly: true %>
  </p>
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>