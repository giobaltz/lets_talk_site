<h1>All Posts</h1>
<%= link_to '<button type="button">Create Post</button>'.html_safe, new_post_path %>
<%= button_to "Search Posts", 'search', method: :get  %>
<table>
  <tr>
    <th>User</th>
    <th>Text</th>
    <th></th>
  </tr>
  <% @post.each do |post| %>
    <tr>
      <td><%= post.user %></td>
      <td><%= post.text %></td>
    </tr>
  <% end %>
</table>